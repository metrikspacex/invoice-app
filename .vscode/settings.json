{
  "files.exclude": {
    "**/.git": true,
    "**/.idea": true,
    "**/backend.iml": true,
    ".angular": true,
    ".editorconfig": true,
    ".eslintignore": true,
    ".eslintrc": true,
    ".gitignore": true,
    ".prettierignore": true,
    ".prettierrc": true,
    "angular.json": true,
    "dist": true,
    "node_modules": true,
    "package-lock.json": true,
    "package.json": true,
    "tsconfig.json": true,

    // Projects

    // Backend
    "projects/backend": false,
    "projects/backend/.gitignore": true,
    "projects/backend/.mvn": true,
    "projects/backend/mvnw": true,
    "projects/backend/mvnw.cmd": true,
    "projects/backend/pom.xml": false,
    "projects/backend/target": true,

    // Frontend
    "projects/frontend/.eslintrc": true,
    "projects/frontend/src/index.html": true,
    "projects/frontend/tsconfig.app.json": true,
    "projects/frontend/tsconfig.spec.json": true,
  },
  "[java]": {
    "editor.defaultFormatter": "xaver.clang-format",
    "editor.rulers": [ 80 ],
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 80
  },
  "java.format.enabled": false,
  "java.format.settings.url": ".vscode/java-formatter.xml",
}
